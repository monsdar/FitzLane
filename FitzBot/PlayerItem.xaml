<UserControl x:Class="FitzBot.PlayerItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitzBot"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border CornerRadius="6" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
        <StackPanel Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left">
                <Label Content="{Binding PlayerType}" FontSize="12" />
                <StackPanel  HorizontalAlignment="Left" Orientation="Horizontal">
                    <Button Content="Delete" Padding="4" />
                </StackPanel>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="{Binding PlayerName}" FontSize="32" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right">
                <Label Content="{Binding Distance}" FontSize="12" HorizontalAlignment="Right" />
                <Label Content="{Binding Pace}" FontSize="12" HorizontalAlignment="Right" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
